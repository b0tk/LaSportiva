</head>
<body>
    <header>
        <h1>Tienda Online</h1>
        <nav>
            <ul>
                <li><a href="/">Inicio</a></li>
                <li><a href="/user/login">Iniciar Sesi√≥n</a></li>
                <li><a href="/user/register">Registrarse</a></li>
                <li><a href="/cart">Carrito</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <% products.forEach(product => { %>
            <div class="product">
                <img src="<%= product.imageUrl %>" alt="<%= product.name %>">
                <h2><%= product.name %></h2>
                <p><%= product.description %></p>
                <p>$<%= product.price %></p>
                <p>Stock: <%= product.stock %></p>
                <a href="/product/<%= product._id %>">Ver Producto</a>
            </div>
        <% }) %>
    </main>
    <footer>
        <p>&copy; 2024 Tienda Online</p>
        <div id="map"></div>
    </footer>
    <script src="/js/map.js"></script>
</body>
</html>
